{
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "hosting": {
    "headers": [
      {
        "source": "**/*",
        "headers": [
          {
            "key": "Content-Security-Policy",
            "value": "default-src 'self' *.googleapis.com plausible.io pomodoro-b3526.firebaseapp.com; font-src data: https:; img-src https:; frame-ancestors 'none'; script-src 'self' 'unsafe-inline' apis.google.com plausible.io; style-src 'self' 'unsafe-inline'"
          },
          {
            "key": "Strict-Transport-Security",
            "value": "max-age=63072000; includeSubDomains; preload"
          },
          {
            "key": "X-Frame-Options",
            "value": "DENY"
          }
        ]
      }
    ],
    "public": "build/client",
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
